<h1>Create new movie</h1>
<form action="/movie/modify" method="POST">
  <div class="form-group">
    <label for="title">Title</label>
    <input
      type="text"
      class="form-control"
      id="title"
      name="title"
      required
      value="{{movie.title}}"
    />
  </div>
  <div class="form-group">
    <label for="genre">Genre</label>
    <input
      type="text"
      class="form-control"
      id="genre"
      name="genre"
      required
      value="{{movie.genre}}"
    />
  </div>
  <div class="form-group">
    <label for="plot">Plot</label>
    <input
      type="text"
      class="form-control"
      id="plot"
      name="plot"
      value="{{movie.plot}}"
      required
    />
  </div>
  <select name="cast" id="cast" multiple>
    {{#each celebrities}}
      <option value="{{this._id}}" {{#ifIncludes movie.cast this}}selected{{/ifIncludes}}>{{this.name}}</option>
    {{/each}}
  </select>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>